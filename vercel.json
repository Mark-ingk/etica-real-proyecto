{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm --prefix frontend run build",
  "outputDirectory": "frontend/dist",
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "VITE_BACKEND_URL": "https://legaldesk-backend.onrender.com"
  }
}
